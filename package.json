{
  "name": "restaurant-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-restaurant website platform with shared components",
  "scripts": {
    "dev": "pnpm --filter './apps/**' run dev",
    "dev:all": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "test:watch": "pnpm run --parallel test:watch",
    "test:coverage": "pnpm run --recursive test:coverage",
    "lint": "pnpm run --recursive lint",
    "format": "pnpm run --recursive format",
    "typecheck": "pnpm run --recursive typecheck",
    "clean": "pnpm run --recursive clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}